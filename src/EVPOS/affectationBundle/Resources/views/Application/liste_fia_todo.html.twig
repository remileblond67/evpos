{% extends "EVPOSaffectationBundle::layout.html.twig" %}
{% block title%}Suivi de la migration MOCA{% endblock%}

{% block content %}
<div class="row">
  <div class="col-lg-8">
    <h4>{{'uo.listeTodo'|trans}}</h4>
  </div>
  <div class="col-lg-4">

  </div>
</div>
<table id="tabAppli" class="table table-striped table-bordered table-hover dataTable no-footer sortable">
    <thead>
        <tr>
            <td class="row">{{ 'application.code'|trans }}</td>
            <td class="row">{{ 'application.nom'|trans }}</td>
            <td class="row">{{ 'application.nature'|trans }}</td>
            <td class="row">{{ 'uo.code'|trans }}</td>
            <td class="row">{{ 'uo.nom'|trans }}</td>
            <td class="row">{{ 'uo.avancementMigMoca'|trans }}</td>
            <td class="row">{{ 'uo.nbUtil'|trans}}</td>
            <td class="row">{{ 'service.numEnsemble'|trans}}</td>
            <td class="row">{{ 'uo.ancienCitrix'|trans}}</td>
        </tr>

    </thead>
    <tbody>
        {% for uo in listeFiaTodo %}
        <tr>
          <td>
            <a href="{{path('evpos_ficheAppli', {'codeAppli': uo.appli.codeAppli})}}">
              {{uo.appli.codeAppli}}
            </a>
          </td>
          <td>{{uo.appli.nomAppli}}</td>
          <td>{{uo.appli.natAppliLong}}</td>
          <td>
            <a href="{{path('evpos_ficheUo', {'codeUo': uo.codeUo})}}">
              {{uo.codeUo}}
            </a>
          </td>
          <td>{{uo.nomUo}}</td>
          <td>{{uo.avancementMocaDetail}}
            {% if uo.enCours %}
            <a href="{{uo.lienFia}}" title="{{'uo.openFia'|trans}}">
              <span class="glyphicon glyphicon-file"></span>
            </a>
            {% endif %}
          </td>
          <td>{{uo.nbUtil}}</td>
          <td>
            {{ uo.listeEnsembleTxt }}
          </td>
          <td>
            {% if uo.ancienCitrix %}
            <span class="ok glyphicon glyphicon-ok"></span>
            {% else %}
            <span class="ko glyphicon glyphicon-remove"></span>
            {% endif %}
            {{ uo.ancienCitrixLong }}
          </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{%endblock%}
