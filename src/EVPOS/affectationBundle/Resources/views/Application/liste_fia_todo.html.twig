{% extends "EVPOSaffectationBundle::layout.html.twig" %}
{% block title%}Suivi de la migration MOCA{% endblock%}

{% block content %}
<table id="tabAppli" class="table table-striped table-bordered table-hover dataTable no-footer sortable">
    <thead>
        <tr>
            <td class="row">{{ 'application.code'|trans }}</td>
            <td class="row">{{ 'application.nom'|trans }}</td>
            <td class="row sorting_asc" rowspan="2">{{ 'uo.code'|trans }}</td>
            <td class="row">{{ 'uo.nom'|trans }}</td>
            <td class="row">{{ 'uo.avancementMigMoca'|trans }}</td>
            <td class="row">{{ 'uo.nbUtil'|trans}}</td>
            <td class="row">FIA</td>
        </tr>

    </thead>
    <tbody>
        {% for uo in listeFiaTodo %}
        <tr>
          <td>{{uo.appli.codeAppli}}</td>
          <td>{{uo.appli.nomAppli}}</td>
          <td>{{uo.codeUo}}</td>
          <td>{{uo.nomUo}}</td>
          <td>{{uo.avancementMocaDetail}}</td>
          <td>{{uo.nbUtil}}</td>
          <td>
            {% if uo.enCours %}
            <a href="{{uo.lienFia}}" title="{{'uo.openFia'|trans}}">
              <span class="glyphicon glyphicon-file"></span>
            </a>
            {% endif %}
          </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{%endblock%}
