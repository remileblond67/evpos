{% extends "EVPOSaffectationBundle::layout.html.twig" %}
{% block title%}Suivi de la migration MOCA{% endblock%}

{% block content %}
    <div class="row">
        <div class="col-lg-10">
            <h4>{{ 'applications.liste'|trans }}</h4>
        </div>
        <div class="col-lg-2">
            <a href="{{ path('evpos_listeAppliXml')}}" class="btn btn-sm btn-default">{{ 'xml.export'|trans }}</a>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover dataTable no-footer">
        <thead>
            <tr>
                <td class="row sorting_asc" rowspan="2">{{ 'application.code'|trans }}</td>
                <td class="row" rowspan="2">{{ 'application.nom'|trans }}</td>
                <td class="row" rowspan="2">{{ 'application.nature'|trans }}</td>
                <td class="row" rowspan="2">{{ 'application.listeUo'|trans }}</td>
                 <td class="row" rowspan="2">{{ 'application.cpi'|trans }}</td>
                <td class="row" rowspan="2">{{ 'application.dispoMoca'|trans }}</td>
                <td class="row" colspan="2">
                    {{ 'application.nbUtil'|trans }}
                </td>
            </tr>
            <tr>
                <td class="row">{{ 'application.nbUtilDeclares'|trans }}</td>
                <td class="row">{{ 'application.nbUtilActifs'|trans }}</td>
            </tr>
        </thead>
        <tbody>
            {% for appli in listeAppli %}
            <tr class="gradeA odd">
                <td class=""><a href="{{ path('evpos_ficheAppli', { 'codeAppli': appli.codeAppli }) }}">{{appli.codeAppli }}</a></td>
                <td class="">{{appli.nomAppli }}</td>
                <td class="">{{appli.natAppliLong }}</td>
                <td>
                    <ul>
                        {% for uo in appli.listeUo %}
                        <li {% if uo.migMoca != true %}class="nonMoca"{% endif %}><a href="{{path('evpos_ficheUo', {'codeUo': uo.codeUo})}}">{{uo.codeUO }}</a> : {{ uo.nomUo }}</li>
                        {% endfor %}
                    </ul>
                </td>
                <td>
                    {% if appli.cpi %}
                    {{appli.cpi.nomUtil}}
                    {% endif %}
                </td>
                <td>{{appli.dispoMocaLong}}</td>
                <td>{{appli.nbAcces}}</td>
                <td></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

{%endblock%}
