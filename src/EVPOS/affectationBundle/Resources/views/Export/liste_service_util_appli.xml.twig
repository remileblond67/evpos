<?xml version="1.0" encoding="UTF-8"?>
<listeDirectionServiceUtilAppli xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    {% for direction in listeDirection %}
    <direction>
        <codeDirection>{{ direction.codeDirection }}</codeDirection>
        <libDirection>{{ direction.libDirection }}</libDirection>
        {% for service in direction.listeServices %}
        <service>
            <codeService>{{service.codeService}}</codeService>
            <libService>{{service.libService}}</libService>
            <utilisateurs>
                {% for utilisateur in service.listeUtilisateurs %}
                <utilisateur>
                    <matUtil>{{utilisateur.matUtil }}</matUtil>
                    <nomUtil>{{ utilisateur.nomUtil }}</nomUtil>
                    <niveauVIP>{{ utilisateur.niveauVIP }}</niveauVIP>
                    <lastLogin>{{ utilisateur.lastLogin|date("d/m/Y") }}</lastLogin>
                    <applications>
                        {% for appli in utilisateur.listeAcces %}
                        <application>
                            <codeAppli>{{ appli.appliAcces.codeAppli }}</codeAppli>
                            <nomAppli>{{ appli.appliAcces.nomAppli }}</nomAppli>
                            <dispoMoca>{{ appli.appliAcces.dispoMocaLong }}</dispoMoca>
                        </application>
                        {% endfor %}
                    </applications>
                </utilisateur>
                {% endfor %}
            </utilisateurs>
        </service>
        {% endfor %}
    </direction>
    {% endfor %}
</listeDirectionServiceUtilAppli>
