{% extends "EVPOSaffectationBundle::layout.html.twig" %}
{% block title%}{{ 'silo.liste'|trans }}{% endblock%}

{% block content %}
<h4>{{ 'silo.liste'|trans }}</h4>
<table class="table table-striped table-bordered table-hover dataTable no-footer">
  <thead>
    <tr>
      <th class="row">{{ 'silo.nom'|trans }}</th>
      <th class="row">{{ 'silo.type'|trans}}</th>
      <th class="row">{{ 'silo.existe'|trans }}</th>
      <th class="row">{{ 'silo.listeUo'|trans}}</th>
    </tr>
  </thead>
  <tbody>
    {% for silo in listeSilo %}
    <tr>
      <td>
        {{ silo.nomSilo }}
      </td>
      <td>
        {{silo.typeSilo}}
      </td>
      <td>
        {% if silo.existe %}
        <span class="glyphicon glyphicon-ok"></span>
        {% endif %}
      </td>
      <td>
        {% for uo in silo.listeUO %}
        <a href="{{path('evpos_ficheUo', {'codeUo': uo.codeUo})}}" title="{{uo.nomUo}}">{{uo.codeUo}}</a>
        {% endfor %}
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}
