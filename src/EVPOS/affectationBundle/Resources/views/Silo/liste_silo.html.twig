{% extends "EVPOSaffectationBundle::layout.html.twig" %}
{% block title%}{{ 'silo.liste'|trans }}{% endblock%}

{% block content %}
<h4>{{ 'silo.liste'|trans }}</h4>
<table class="table table-striped table-bordered table-hover dataTable no-footer">
  <thead>
    <tr>
      <th class="row">{{ 'silo.nom'|trans }}</th>
      <th class="row">Existe ?</th>
      <th class="row">{{ 'silo.listeUo'|trans}}</th>
    </tr>
  </thead>
  <tbody>
    {% for silo in listeSilo %}
    <tr>
      <td>{{ silo.nomSilo }}</td>
      <td>
        {% if silo.existe %}
        <span class="glyphicon glyphicon-ok"></span>
        {% endif %}
      </td>
      <td>
        {% for uo in silo.listeUO %}
        {{uo.codeUo}}
        {% endfor %}
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}
