{% extends "EVPOSaffectationBundle::layout.html.twig" %}
{% block title%}{{'uo.sansUtil'|trans}}{% endblock%}

{% block content %}
<div class="row">
    <div class="col-lg-8">
        <h4>{{'uo.sansUtil'|trans}}</h4>
    </div>
</div>

<table class="table table-striped table-bordered table-hover dataTable no-footer sortable">
    <thead>
        <tr>
            <td class="row">
              {{ 'application.code'|trans }}
            </td>
            <td class="row">
              {{ 'uo.code'|trans }}
            </td>
            <td class="row">
              {{ 'application.cpi'|trans}}
            </td>
            <td class="row">
              {{ 'uo.nbUtil'|trans}}
            </td>
        </tr>

    </thead>
    <tbody>
        {% for uo in listeUo %}
        <tr class="gradeA odd">
          <td>
            <a href="{{ path('evpos_ficheAppli', { 'codeAppli': uo.codeAppli }) }}">
              {{uo.codeAppli}}
            </a>
          </td>
    			<td>
            <a href="{{path('evpos_ficheUo', {'codeUo': uo.codeUo})}}">
              {{uo.codeUo}}
            </a>
          </td>
          <td>
            {{uo.matUtil}}
            {{uo.nomUtil}}
          </td>
          <td>{{uo.nbUtil}}</td>
    		</tr>
		{% endfor %}
	</tbody>
</table>
{%endblock%}
