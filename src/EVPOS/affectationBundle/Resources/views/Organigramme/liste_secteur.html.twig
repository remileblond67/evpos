{% extends "EVPOSaffectationBundle::layout.html.twig" %}
{% block title%}{{ 'secteur.liste'|trans }}{% endblock%}

{% block content %}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'utilisateur.liste'|trans }}</h3>
    </div>
    <div class="panel-body">
        <div class="row">
          <table class="table table-striped table-bordered table-hover dataTable no-footer sortable">
            <thead>
                <tr>
                    <td class="row">{{ 'secteur.code'|trans }}</td>
                    <td class="row">{{ 'secteur.nom'|trans }}</td>
                    <td class="row">{{ 'secteur.nbAppli'|trans }}</td>
                    <td class="row">{{ 'secteur.noteAvancement'|trans }}</td>
                </tr>
            </thead>
            <tbody>
                {% for secteur in listeSecteur %}
                <tr>
                  <td>
                    <a href="{{ path('evpos_ficheSecteur', {'codeSecteur': secteur.codeSecteur}) }}">
                      {{ secteur.codeSecteur }}
                    </a>
                  </td>
                  <td>{{ secteur.libSecteur }}</td>
                  <td>{{ secteur.listeAppli | length }}</td>
                  <td>
                    <progress value="{{secteur.noteAvancementMoca}}" max="100" title="{{secteur.noteAvancementMoca}}%">
                      {{secteur.noteAvancementMoca}}
                    </progress>
                  </td>
                </tr>
                {% endfor %}
            </tbody>
          </table>
        </div>
    </div>
</div>
{% endblock %}
