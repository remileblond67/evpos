{% extends "EVPOSaffectationBundle::layout.html.twig" %}
{% block title%}Utilisateur {{util.matUtil}}{% endblock%}

{% block content %}
<h2>Utilisateur {{util.matUtil}}</h2>

<div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Informations annuaire</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-3"><h4>Matricule</h4>{{util.matUtil}}</div>
            <div class="col-lg-3"><h4>Nom</h4>{{util.prenomUtil}} {{util.nomUtil}}</div>
            <div class="col-lg-3">
                <h4>Service</h4>
                <a href="{{ path('evpos_ficheService', { 'codeService' : util.serviceUtil.codeService }) }}">{{util.serviceUtil.libService}}</a>
            </div>
            <div class="col-lg-3">
                <h4>Direction</h4>
                {{util.serviceUtil.direction.libDirection }}
            </div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Applications utilisées</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-bordered table-hover dataTable no-footer">
            <thead>
                <tr>
                    <td class="row" rowspan="2">Code Appli</td>
                    <td class="row" rowspan="2">Libellé</td>
                    <td class="row" colspan="3">Utilisation de l'application</td>
                </tr>
                <tr>
                    <td class="row">Accès</td>
                    <td class="row">Usage</td>
                    <td class="row">Validation</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="gradeA odd"></td>
                    <td class="gradeA odd"></td>
                    <td class="gradeA odd"></td>
                    <td class="gradeA odd"></td>
                    <td class="gradeA odd"></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title">Postes utilisés</h3>
    </div>
    <div class="panel-body">

    </div>
</div>

<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title">Imprimantes utilisées</h3>
    </div>
    <div class="panel-body">

    </div>
</div>
{%endblock%}
