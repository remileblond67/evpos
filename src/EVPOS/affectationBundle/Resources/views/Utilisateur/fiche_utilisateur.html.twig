{% extends "EVPOSaffectationBundle::layout.html.twig" %}
{% block title%}Utilisateur {{util.matUtil}}{% endblock%}

{% block content %}
<h2>Utilisateur {{util.matUtil}}</h2>

<div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">{{ 'utilisateur.infoAnnuaire'|trans }}</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-3"><h4>{{ 'utilisateur.matricule'|trans }}</h4>{{util.matUtil}}</div>
            <div class="col-lg-3"><h4>{{ 'utilisateur.nom'|trans }}</h4>{{util.prenomUtil}} {{util.nomUtil}}</div>
            <div class="col-lg-3">
                <h4>{{ 'service.nom'|trans }}</h4>
                <a href="{{ path('evpos_ficheService', { 'codeService' : util.serviceUtil.codeService }) }}">{{util.serviceUtil.libService}}</a>
            </div>
            <div class="col-lg-3">
                <h4>{{ 'direction.nom'|trans }}</h4>
                {{util.serviceUtil.direction.libDirection }}
            </div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'applications.listeUsage'|trans }}</h3>
    </div>
