{% extends "EVPOSaffectationBundle::layout.html.twig" %}
{% block title%}Liste des services{% endblock%}

{% block content %}
<div class="row">
    <div class="col-lg-10">
        <h4>Liste des services</h4>
    </div>
    <div class="col-lg-2">
        <a href="" class="btn btn-sm btn-default">Export XML</a>
    </div>
</div>
    <ul>
        <table class="table table-striped table-bordered table-hover dataTable no-footer">
            <thead>
                <tr>
                    <td class="row">Code service</td>
                    <td class="row">Nom</td>
                    <td class="row">Direction</td>
                </tr>
            </thead>
            <tbody>
                {% for service in listeService %}
                <tr class="gradeA odd">
                    <td class="">
                        {% if service.codeService != '' %}
                        <a href="{{ path('evpos_ficheService', { 'codeService' : service.codeService }) }}">
                            {{service.codeService }}
                        </a>
                        {% endif %}
                    </td>
                    <td class="">{{service.libService }}</td>
                    <td class=""><a href="{{path('evpos_ficheDirection', {'codeDirection': service.direction.codeDirection})}}">{{service.direction.libDirection}}</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </ul>
{%endblock%}
