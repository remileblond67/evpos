{% extends "EVPOSaffectationBundle::layout.html.twig" %}
{% block title%}{{ 'ensemble.cal'|trans }}{% endblock%}

{% block content %}
<div class="row">
    <div class="col-lg-12">
        <h4>{{ 'ensemble.cal'|trans }}</h4>
    </div>
</div>

<table id="tabPlanif" class="table table-striped table-bordered table-hover dataTable no-footer sortable">
    <thead>
      <tr>
        <th rowspan="2">{{ 'service.code'|trans }}</th>
        <th rowspan="2">{{ 'service.nom'|trans }}</th>
        <th colspan="{{ensembles|length}}">{{ 'service.numEnsemble'|trans}}</th>
      </tr>
        {% for ensemble in ensembles %}
        <th>{{ensemble.numEnsemble}}</th>
        {% endfor %}
      <tr>
      </tr>
    </thead>
    <tbody>
      {% for service in services %}
      <tr>
        <td>{{ service.codeService }}</td>
        <td>{{ service.libService }}</td>
        {% for ensemble in ensembles %}
        <td>
          {% if ensemble.numEnsemble == service.numEnsemble %}
            X
          {% endif %}
        </td>
        {% endfor %}
      </tr>
      {% endfor %}
    </tbody>
</table>
{% endblock %}
